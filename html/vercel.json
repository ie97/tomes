// vercel.json
{
  "headers": [
    {
      "source": "/(.*\\.html)", // Applies to all HTML files
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, s-maxage=86400, stale-while-revalidate"
        }
      ]
    },
    {
      "source": "/(.*\\.(?:css|js|jpg|jpeg|gif|png|svg|webp))", // Applies to common static assets
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}